
{
    "manifest_version": 3,
    "name": "Posture Reminder",
    "version": "1.0",
    "description": "An extension to remind users to correct their posture.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "permissions": ["alarms", "notifications", "storage", "tabs","activeTab",
    "camera", "videoCapture", "identity"],
    "background": {
      "service_worker": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["popup.js", "triggerCamera.js", "faceDetection.js"],
        "run_at": "document_end"
      }
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ]
  }